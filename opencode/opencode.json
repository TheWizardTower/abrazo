{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "lsp": "allow"
  },
  "provider": {
    "llama.cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama-swap",
      "options": {
        "baseURL": "http://192.168.1.140:8080/v1"
      },
      "models": {
        "Qwen3-next-80B-A3B-Instruct-UD-Q4-K-XL": {
          "name": "Qwen3-next from llama-swap",
          "modalities": {
            "input": [
              "image",
              "text"
            ],
            "output": [
              "text"
            ]
          },
          "limit": {
            "context": 64000,
            "output": 65536
          }
        }
      }
    }
  },
  "mcp": {
    "serena": {
      "type": "local",
      "command": [
        "serena-mcp-server",
        "--project-from-cwd"
      ],
      "enabled": true
    }
  }
}
